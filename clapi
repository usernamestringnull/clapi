      else
		CHECKID=$(curl -sX GET "https://api.clouding.io/v1/firewalls/rules/$INPUT" -H "Accept: application/json" -H "X-API-KEY: $API_KEY" -H "Content-Type: application/json" -H "Content-Length: 0" | jq .status)
